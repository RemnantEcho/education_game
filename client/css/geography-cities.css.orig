main {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
}

#start-menu {
    flex-direction: column;
    align-items: center;
}

#start-title {
    margin: 0;
    font-size: 1.75rem;
}

#start-subject {
    margin: 10% 0 50% 0;
    font-size: 1.5rem;
}

#start-button {
    width: 150px;
    height: 50px;
    border: none;
    text-decoration: none;
    color: #fff;
    font-size: 1.3rem;
    cursor: pointer;
    font-weight: bold;
}

#quiz-menu {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

#quiz-elements {
    position: absolute;
    top: 4%;
    right: 3%;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

#quiz-counter {
    font-size: 1.2rem;
}

#quiz-info {
    width: 40px;
    height: 40px;
    border: none;
    color: #fff;
    clip-path: ellipse(50% 50%);
    cursor: pointer;
    font-size: 1.5rem;
}

#quiz-question {
    font-size: 1.6rem;
    margin: 5% auto 2% auto;
}

#city-image {
    background-color: #434343;
    object-fit: cover;
    margin: 2% auto 2% auto;
    height: 30%;
}

#overlay-content {
    padding: 32px;
    width: 300px;
    background-color: #fff;
    flex-direction: column;
